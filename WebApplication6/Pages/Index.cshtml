@page
@model WebApplication6.Pages.IndexModel
@{
    ViewData["Title"] = "Реєстрація на консультацію";
}

<div class="container">
    <h2>Реєстрація на консультацію</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="Registration.FullName"></label>
            <input asp-for="Registration.FullName" class="form-control" />
            <span asp-validation-for="Registration.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.Email"></label>
            <input asp-for="Registration.Email" class="form-control" />
            <span asp-validation-for="Registration.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.SelectedProduct"></label>
            <select asp-for="Registration.SelectedProduct" class="form-control">
                <option value="">Оберіть продукт</option>
                <option value="JavaScript">JavaScript</option>
                <option value="C#">C#</option>
                <option value="Java">Java</option>
                <option value="Python">Python</option>
                <option value="Основи">Основи</option>
            </select>
            <span asp-validation-for="Registration.SelectedProduct" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.ConsultationDate"></label>
            <input asp-for="Registration.ConsultationDate" type="date" class="form-control" />
            <span asp-validation-for="Registration.ConsultationDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Зареєструватися</button>
    </form>
</div>
